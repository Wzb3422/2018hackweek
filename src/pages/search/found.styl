.item-box
  display flex
  height 2.4rem
  width 100%
  margin-bottom .5rem
  .item-logo
    height 2.4rem
    width 1.15rem
    line-height 2.4rem
    margin-left .3rem
    .umbrella-font
      height 1rem
      width 1rem
      margin 0 auto
      font-size 1rem
  .item-contents
    margin-left .1rem
    flex 1
    .item-title
      height .44rem
      width 100%
      line-height .44rem
      font-size .44rem
      margin-top .4rem
    .item-desc
      height .44rem
      width 100%
      line-height .44rem
      font-size .30rem
      color rgb(210, 210, 212)
      overflow hidden
      margin .1rem auto
    .item-label-list
      width 100%
      height .5rem
      .purpleLabel
        color rgb(104, 94, 240)
        height .4rem
        border 2px solid rgb(104, 94, 240)
        font-size .26rem
        border-radius 50px
        padding 0 .2rem
        margin-right .2rem
  .forDetail
    height 2.4rem
    width .5rem
    font-size .6rem
    line-height 2.4rem
    margin-right .3rem
